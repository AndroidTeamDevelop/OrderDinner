<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/tab_widget_padding_top"
    android:paddingBottom="@dimen/tab_widget_padding_bottom"
    android:background="@color/bg_tab_widget"
    android:orientation="vertical">

    <ImageView android:id="@+id/img_tab_widget"
        android:layout_width="@dimen/img_tab_widget_width"
        android:layout_height="@dimen/img_tab_widget_height"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@null"/>

    <TextView android:id="@+id/text_tab_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@drawable/tab_text_color"
        android:textSize="@dimen/text_tab_widget_size"/>

</LinearLayout>
